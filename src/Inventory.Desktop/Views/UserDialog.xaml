<Window x:Class="Inventory.Desktop.Views.UserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:enums="clr-namespace:Inventory.Desktop.Enums;assembly=Inventory.Desktop"
        xmlns:translation="clr-namespace:Inventory.Desktop.Converters"
        Height="320" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Margin="0,0,0,5">
            <TextBlock.Inlines>
                <Run>
                    <Run.Text>
                        <translation:TranslationExtension Key="users.username"/>
                    </Run.Text>
                </Run>
                <Run Text=" *"/>
            </TextBlock.Inlines>
        </TextBlock>
        <TextBox Grid.Row="1" x:Name="UsernameTextBox" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="2" Margin="0,0,0,5">
            <TextBlock.Inlines>
                <Run>
                    <Run.Text>
                        <translation:TranslationExtension Key="users.email"/>
                    </Run.Text>
                </Run>
                <Run Text=" *"/>
            </TextBlock.Inlines>
        </TextBlock>
        <TextBox Grid.Row="3" x:Name="EmailTextBox" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="4" Margin="0,0,0,5">
            <TextBlock.Inlines>
                <Run>
                    <Run.Text>
                        <translation:TranslationExtension Key="users.password"/>
                    </Run.Text>
                </Run>
                <Run Text=" *"/>
            </TextBlock.Inlines>
        </TextBlock>
        <PasswordBox Grid.Row="5" x:Name="PasswordBox" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="6" Margin="0,0,0,5">
            <TextBlock.Inlines>
                <Run>
                    <Run.Text>
                        <translation:TranslationExtension Key="users.role"/>
                    </Run.Text>
                </Run>
                <Run Text=" *"/>
            </TextBlock.Inlines>
        </TextBlock>
        <ComboBox Grid.Row="7" x:Name="RoleComboBox" Margin="0,0,0,15">
            <ComboBox.Items>
                <x:Static Member="enums:UserRole.Cashier"/>
                <x:Static Member="enums:UserRole.Moderator"/>
                <x:Static Member="enums:UserRole.SuperAdmin"/>
            </ComboBox.Items>
        </ComboBox>

        <CheckBox Grid.Row="8" x:Name="IsActiveCheckBox" Margin="0,0,0,15">
            <CheckBox.Content>
                <translation:TranslationExtension Key="users.active"/>
            </CheckBox.Content>
        </CheckBox>

        <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Click="Save_Click" Width="75" Margin="0,0,10,0" IsDefault="True">
                <Button.Content>
                    <translation:TranslationExtension Key="common.save"/>
                </Button.Content>
            </Button>
            <Button Click="Cancel_Click" Width="75" IsCancel="True">
                <Button.Content>
                    <translation:TranslationExtension Key="common.cancel"/>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</Window>

